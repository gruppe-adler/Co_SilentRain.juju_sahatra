if (!isServer) exitWith {};

["grad_drop_soundChange",{
    params ["_plane", "_dropState"];

    private _sound = "c130_sound_int_forsage_sfx";
    switch (_dropState) do {
		case 1: { _sound = "c130_sound_int_forsage_sfx"; };
		case 2: { _sound = "c130_sound_int_low_sfx"; };
		case 3: { _sound = "c130_sound_int_hi_sfx"; };
		case 4: { _sound = "c130_sound_ext_hi_sfx"; };
		default { _sound = "end"; };
    };

    [_plane, _sound] call grad_drop_fnc_soundPlay;

}] call CBA_fnc_addEventhandler;