    sleep 2;

    // hint "moved into plane";
    [["20/03/1992 - 5:50", 2, 4, 2], ["Morning dawns...", 3, 4, 2], ["...prepare your attack", 3, 4, 2]] spawn BIS_fnc_EXP_camp_SITREP;
    sleep 4;
    cutText ["", "BLACK IN", 4];
    playMusic "introVibe";
    4 fadeSound 1;
    sleep 4;
    diwako_dui_main_toggled_off = false;
};